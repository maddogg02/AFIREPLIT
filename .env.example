# AFIREPLIT Environment Variables
# Copy this file to .env and fill in your actual values

# Required: PostgreSQL database connection string
# For Neon: postgres://username:password@hostname/database?sslmode=require
# For local: postgres://username:password@localhost:5432/database_name
DATABASE_URL=your_database_url_here

# Required: OpenAI API key for AI functionality
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Server port (defaults to 5000)
PORT=5000